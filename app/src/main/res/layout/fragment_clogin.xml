<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clogin"
    android:background="#1d67de"
    >


    <Button
        android:id="@+id/btnCBack"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
        android:drawableTint="@color/white" />

    <TextView
        android:id="@+id/log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="LOG IN"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="CATERER SECTION"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />


    <View
        android:id="@+id/line1"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_alignTop="@+id/log"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="#cf1919" />

    <EditText
        android:id="@+id/cUsername"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/section"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:width="320dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/ic_round_person_24"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-medium"
        android:hint="Username"
        android:inputType="textLongMessage"
        android:paddingStart="12dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:scrollHorizontally="true"
        android:textColor="@color/black"
        android:textColorHint="#5a5c58" />

    <EditText
        android:id="@+id/cPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:width="320dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-medium"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        android:scrollHorizontally="true"
        android:textColor="@color/black"
        android:textColorHint="#5a5c58" />

    <CheckBox
        android:id="@+id/btnCCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/cPassword"
        android:layout_alignTop="@+id/cPassword"
        android:layout_marginTop="40dp"
        android:hint="Show Password"
        android:fontFamily="sans-serif-medium"
        android:textColorHint="@color/white"
        />

    <Button
        android:id="@+id/btnCLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:backgroundTint="#cf1919"
        android:fontFamily="monospace"
        android:text="Login"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnCLogin"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-medium"
        android:text="Don't have an account?"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnCSignUp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnCLogin"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="54dp"
        android:width="55dp"
        android:height="30dp"
        android:backgroundTint="#fce9b3"
        android:fontFamily="sans-serif-medium"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />



    
</RelativeLayout>